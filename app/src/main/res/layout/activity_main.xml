<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FBF5CA"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btnresta"
        android:layout_width="118dp"
        android:layout_height="61dp"
        android:layout_marginTop="360dp"
        android:layout_marginEnd="64dp"
        android:backgroundTint="#DA37770F"
        android:text="Resta"
        app:cornerRadius="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btndivision"
        android:layout_width="120dp"
        android:layout_height="62dp"
        android:layout_marginEnd="8dp"
        android:backgroundTint="#951B1B"
        android:text="Division"
        app:cornerRadius="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/btnresta"
        app:layout_constraintTop_toBottomOf="@+id/btnresta"
        app:layout_constraintVertical_bias="0.133" />

    <Button
        android:id="@+id/btnmultiplicacion"
        android:layout_width="121dp"
        android:layout_height="65dp"
        android:layout_marginEnd="24dp"

        android:backgroundTint="#F5239188"
        android:text="Multiplicacion"
        app:cornerRadius="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btndivision"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/btmsuma"
        app:layout_constraintTop_toBottomOf="@+id/btmsuma"
        app:layout_constraintVertical_bias="0.124" />

    <Button
        android:id="@+id/btmsuma"
        android:layout_width="122dp"
        android:layout_height="64dp"
        android:layout_marginTop="360dp"
        android:layout_marginEnd="12dp"
        android:backgroundTint="#A818C1"
        android:text="Suma"
        android:textColorHighlight="#A4FF41FC"
        app:cornerRadius="0dp"
        app:layout_constraintEnd_toStartOf="@+id/btnresta"
        app:layout_constraintHorizontal_bias="0.884"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textResultado"
        android:layout_width="283dp"
        android:layout_height="96dp"
        android:hint="    Resultado"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.265"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.875" />

    <EditText
        android:id="@+id/num2"
        android:layout_width="230dp"
        android:layout_height="62dp"
        android:layout_marginStart="88dp"
        android:layout_marginTop="16dp"
        android:autofillHints=""
        android:ems="10"
        android:hint="Numero dos"
        android:inputType="number"
        android:textColorHint="#654D44"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/num1"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/num1"
        app:layout_constraintTop_toBottomOf="@+id/num1"
        app:layout_constraintVertical_bias="0.05" />

    <EditText
        android:id="@+id/num1"
        android:layout_width="229dp"
        android:layout_height="62dp"
        android:layout_marginStart="88dp"
        android:layout_marginTop="40dp"
        android:autofillHints=""
        android:ems="10"
        android:hint="Numero uno"
        android:inputType="number"
        android:textColorHint="#654D44"
        app:layout_constraintEnd_toEndOf="@+id/imageView2"
        app:layout_constraintHorizontal_bias="0.703"
        app:layout_constraintStart_toStartOf="@+id/imageView2"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="108dp"
        android:layout_height="72dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.531"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.066"
        app:srcCompat="@drawable/baseline_calculate_24" />

</androidx.constraintlayout.widget.ConstraintLayout>